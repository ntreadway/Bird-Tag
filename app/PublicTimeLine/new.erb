<div class="toolbar">
	<h1 id="pageTitle">
		New PublicTimeLine
	</h1>
</div>

<form title="New PublicTimeLine" 
	  class="panel"
	  id="publictimeline_new_form" 
	  method="POST" 
	  action="<%=url_for(:action => :create)%>" selected="true">
	<fieldset>
		<input type="hidden" name="id" value="<%=@publictimeline.object%>"/>
		
		  <div class="row">
			  <label>Text: </label>
			  <input type="text" name="publictimeline[text]"/>
		  </div>
		
		  <div class="row">
			  <label>User screen name: </label>
			  <input type="text" name="publictimeline[user_screen_name]"/>
		  </div>
		
		  <div class="row">
			  <label>User name: </label>
			  <input type="text" name="publictimeline[user_name]"/>
		  </div>
		
		  <div class="row">
			  <label>User profile image url: </label>
			  <input type="text" name="publictimeline[user_profile_image_url]"/>
		  </div>
		
		  <div class="row">
			  <label>Source: </label>
			  <input type="text" name="publictimeline[source]"/>
		  </div>
		
	</fieldset>
	<input type="submit" value="Create"/>
</form>